<% unless params.valid? %>
  <div class="errors">
    <h2>Some issue with the submission occurred</h2>
    <ul>
      <% params.error_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :message, '/link' do
    hidden_field '_csrf_token'
  div class: 'heading' do
    h3 'Enter a Message'
  end
  div class: 'input' do
    label     :text
    text_area :text, class: 'form-control'
  end
  div class: 'input' do
    label      :password
    text_field :password, class: 'form-control'
    button     'Encrypt', onclick: 'encode();', type: "button"
    end
    div class: 'input' do
      hidden_field :encrypted
    div do
    h3 'Options to select for destroy message'
  end
  div class: 'input' do
    label        :hours_to_destroy
    number_field :hours_to_destroy
  end
  div class: 'input' do
    label        :visits_limit
    number_field :visits_limit
  end
  submit 'Create Message'
  end %>
